-#  This file is app/views/movies/index.html.haml
%h1 All Movies

= form_tag movies_path, :method => :get, :order => params[:ratings],id: 'ratings_form' do 
  Include: 
  - @all_ratings.each do |rating|
    = rating
    = check_box_tag "ratings[#{rating}]", rating, @checked.include?(rating), id: 'ratings_#{rating}'
  = submit_tag 'Refresh', id: 'ratings_submit'
%table#movies
  %thead
    %tr
      %th{:class => ("hilite" if @order == 'title')}= link_to "Movie Title", movies_path(:order => 'title', :ratings => params[:ratings]) 
      %th Rating
      %th{:class => ("hilite" if @order == 'release_date')}=link_to "Release Date", movies_path(:order => 'release_date', :ratings => params[:ratings])
      %th More Info
  %tbody
    - @movies.each do |movie|
      %tr
        %td= movie.title 
        %td= movie.rating
        %td= movie.release_date
        %td= link_to "More about #{movie.title}", movie_path(movie)

= link_to 'Add new movie', new_movie_path
